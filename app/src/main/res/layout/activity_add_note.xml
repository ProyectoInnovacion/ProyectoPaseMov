<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.controler.AddNoteActivity"
    android:orientation="vertical"
    android:background="#00B0FF"
    android:padding="20dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textoView"
        android:text="Nueva Nota"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_comer"
        android:padding="10dp"
        android:layout_margin="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titulo notas"
            android:id="@+id/tituloNotas"
            android:background="#3000B0FF"
            android:textSize="30sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/linea_horizontal"
            android:backgroundTint="@color/transparante"
            />
        <EditText
            android:id="@+id/descripcionput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#3000B0FF"
            android:hint="Descripcion notas"
            android:textSize="16sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:lines="10"
            android:gravity="top"
            />
</LinearLayout>
<com.google.android.material.button.MaterialButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="@color/white"
    android:textColor="#00B0FF"
    android:id="@+id/btnGuardarNotas"
    android:text="Guardar nota"/>

</LinearLayout>